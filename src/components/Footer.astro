<style>
  .footer {
    background: var(--color-secondary);
    color: var(--footer-text-90, rgba(255, 255, 255, 0.9));
  }

  /* CTA Band */
  .footer__cta-band {
    background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-primary-dark) 100%);
    padding: var(--spacing-xl) 0;
  }

  .footer__cta-inner {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: var(--spacing-lg);
  }

  .footer__cta-text {
    font-size: var(--font-size-xl);
    font-weight: 700;
    color: var(--color-white);
    margin: 0;
  }

  .footer__cta-sub {
    font-size: var(--font-size-base);
    color: rgba(255, 255, 255, 0.85);
    margin: 0.25rem 0 0;
  }

  .footer__cta-actions {
    display: flex;
    gap: var(--spacing-sm);
    flex-wrap: wrap;
    justify-content: center;
  }

  .footer__cta-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    font-size: var(--font-size-sm);
    font-weight: 600;
    border-radius: var(--border-radius);
    text-decoration: none;
    transition: all var(--transition-fast);
  }

  .footer__cta-btn--primary {
    background: var(--color-white);
    color: var(--color-primary);
  }

  .footer__cta-btn--primary:hover {
    background: var(--color-accent);
    transform: translateY(-2px);
  }

  .footer__cta-btn--ghost {
    background: transparent;
    color: var(--color-white);
    border: 2px solid rgba(255, 255, 255, 0.5);
  }

  .footer__cta-btn--ghost:hover {
    background: rgba(255, 255, 255, 0.1);
    border-color: var(--color-white);
  }

  /* Main Footer */
  .footer__main {
    padding: var(--spacing-2xl) 0;
  }

  .footer__grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--spacing-xl);
  }

  /* Brand Column */
  .footer__logo {
    margin-bottom: var(--spacing-md);
  }

  .footer__logo-text {
    display: block;
    font-size: var(--font-size-xl);
    font-weight: 800;
    color: var(--color-white);
  }

  .footer__logo-tag {
    display: block;
    font-size: var(--font-size-sm);
    color: var(--color-primary);
    font-weight: 500;
    margin-top: 0.125rem;
  }

  .footer__brand-desc {
    font-size: var(--font-size-sm);
    color: var(--footer-text-70, rgba(255, 255, 255, 0.7));
    line-height: var(--line-height-relaxed, 1.7);
    margin: 0 0 var(--spacing-md);
  }

  .footer__contact-grid {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .footer__contact-item {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-size: var(--font-size-sm);
    color: var(--footer-text-90, rgba(255, 255, 255, 0.9));
    text-decoration: none;
    transition: color var(--transition-fast);
  }

  .footer__contact-item:hover {
    color: var(--color-white);
  }

  .footer__contact-icon {
    flex-shrink: 0;
    color: var(--color-primary);
  }

  /* Navigation Columns */
  .footer__col {
    display: flex;
    flex-direction: column;
  }

  .footer__title {
    font-size: var(--font-size-sm);
    font-weight: 700;
    color: var(--color-white);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin: 0 0 var(--spacing-md);
  }

  .footer__title--spaced {
    margin-top: var(--spacing-lg);
    padding-top: var(--spacing-md);
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }

  .footer__list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .footer__link {
    font-size: var(--font-size-sm);
    color: var(--footer-text-70, rgba(255, 255, 255, 0.7));
    text-decoration: none;
    transition: color var(--transition-fast);
  }

  .footer__link:hover {
    color: var(--color-white);
  }

  /* Locations */
  .footer__locations {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
  }

  .footer__location-name {
    display: block;
    font-size: var(--font-size-sm);
    font-weight: 600;
    color: var(--color-white);
    margin-bottom: 0.25rem;
  }

  .footer__address {
    font-size: var(--font-size-xs);
    color: var(--footer-text-70, rgba(255, 255, 255, 0.7));
    font-style: normal;
    line-height: 1.5;
  }

  .footer__schedule {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-top: var(--spacing-md);
    padding-top: var(--spacing-md);
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    font-size: var(--font-size-sm);
    color: var(--footer-text-90, rgba(255, 255, 255, 0.9));
  }

  .footer__schedule-icon {
    color: var(--color-primary);
  }

  /* Brands Section */
  .footer__brands {
    background: rgba(0, 0, 0, 0.2);
    padding: var(--spacing-lg) 0;
  }

  .footer__brands-inner {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: var(--spacing-sm);
  }

  .footer__brands-label {
    font-size: var(--font-size-xs);
    color: var(--footer-text-50, rgba(255, 255, 255, 0.5));
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  .footer__brands-list {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: var(--spacing-sm) var(--spacing-lg);
  }

  .footer__brands-item {
    font-size: var(--font-size-sm);
    font-weight: 600;
    color: var(--color-white);
  }

  .footer__brands-certs {
    display: flex;
    gap: var(--spacing-sm);
  }

  .footer__cert {
    font-size: var(--font-size-xs);
    font-weight: 600;
    color: var(--color-primary);
    background: rgba(199, 22, 29, 0.15);
    padding: 0.25rem 0.75rem;
    border-radius: var(--border-radius-sm, 4px);
  }

  /* Bottom */
  .footer__bottom {
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    padding: var(--spacing-md) 0;
  }

  .footer__bottom-inner {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: var(--spacing-sm);
  }

  .footer__copy {
    font-size: var(--font-size-xs);
    color: var(--footer-text-50, rgba(255, 255, 255, 0.5));
    margin: 0;
  }

  .footer__legal {
    display: flex;
    gap: var(--spacing-md);
  }

  .footer__legal a {
    font-size: var(--font-size-xs);
    color: var(--footer-text-50, rgba(255, 255, 255, 0.5));
    text-decoration: none;
    transition: color var(--transition-fast);
  }

  .footer__legal a:hover {
    color: var(--color-white);
  }

  /* Tablet */
  @media (min-width: 768px) {
    .footer__cta-inner {
      flex-direction: row;
      justify-content: space-between;
      text-align: left;
    }

    .footer__grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .footer__brand {
      grid-column: 1 / -1;
    }

    .footer__bottom-inner {
      flex-direction: row;
      justify-content: space-between;
    }
  }

  /* Desktop */
  @media (min-width: 1024px) {
    .footer__grid {
      grid-template-columns: 1.5fr 1fr 1fr 1.2fr;
    }

    .footer__brand {
      grid-column: auto;
    }
  }

  @media print {
    .footer {
      display: none !important;
    }
  }
</style>
