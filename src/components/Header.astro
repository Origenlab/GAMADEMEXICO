<style>
  /* Header */
  .header {
    background-color: var(--color-white);
    height: var(--header-height);
    position: sticky;
    top: 0;
    z-index: 1000;
    transition: box-shadow var(--transition-base);
    border-bottom: 1px solid var(--color-border);
  }

  .header--scrolled {
    box-shadow: var(--shadow-md);
  }

  .header .container {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 100%;
  }

  .header__logo {
    flex-shrink: 0;
  }

  .header__logo a {
    display: block;
  }

  .header__logo-img {
    width: 200px;
    height: auto;
    max-height: 60px;
    object-fit: contain;
  }

  .header__cta {
    display: none;
  }

  /* Desktop Navigation */
  .nav-desktop {
    display: none;
  }

  .nav-desktop__list {
    display: flex;
    align-items: center;
    gap: 0;
  }

  .nav-desktop__item {
    position: relative;
  }

  .nav-desktop__link {
    display: flex;
    align-items: center;
    gap: 0.3rem;
    padding: 0.5rem 1rem;
    font-size: var(--font-size-sm);
    font-weight: 500;
    color: var(--color-text);
    transition: color var(--transition-fast);
    white-space: nowrap;
  }

  .nav-desktop__link:hover,
  .nav-desktop__link--active {
    color: var(--color-primary);
  }

  .nav-desktop__arrow {
    font-size: 10px;
    transition: transform var(--transition-fast);
  }

  .nav-desktop__item:hover .nav-desktop__arrow {
    transform: rotate(180deg);
  }

  /* Mega Menu */
  .mega-menu {
    position: absolute;
    top: 100%;
    left: 50%;
    transform: translateX(-50%);
    background: var(--color-white);
    border: 1px solid var(--color-border);
    border-top: 3px solid var(--color-primary);
    border-radius: 0 0 var(--border-radius) var(--border-radius);
    box-shadow: var(--shadow-lg);
    padding: var(--spacing-lg);
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--spacing-lg);
    min-width: 720px;
    opacity: 0;
    visibility: hidden;
    transform: translateX(-50%) translateY(10px);
    transition: all var(--transition-base);
    pointer-events: none;
  }

  .nav-desktop__item:hover .mega-menu,
  .nav-desktop__item:focus-within .mega-menu {
    opacity: 1;
    visibility: visible;
    transform: translateX(-50%) translateY(0);
    pointer-events: auto;
  }

  .mega-menu__category {
    padding: var(--spacing-sm);
  }

  .mega-menu__title {
    font-size: var(--font-size-sm);
    font-weight: 700;
    color: var(--color-secondary);
    padding-bottom: 0.5rem;
    margin-bottom: 0.75rem;
    border-bottom: 2px solid var(--color-primary);
  }

  .mega-menu__list {
    display: flex;
    flex-direction: column;
    gap: 0.4rem;
  }

  .mega-menu__link {
    font-size: var(--font-size-xs);
    color: var(--color-text-light);
    padding: 0.25rem 0;
    transition: color var(--transition-fast);
  }

  .mega-menu__link:hover {
    color: var(--color-primary);
  }

  .mega-menu__view-all {
    display: inline-block;
    margin-top: 0.75rem;
    font-size: var(--font-size-xs);
    font-weight: 600;
    color: var(--color-primary);
  }

  .mega-menu__view-all:hover {
    color: var(--color-primary-dark);
  }

  /* Mega Menu - Services variant */
  .mega-menu--services {
    grid-template-columns: 1fr 1fr 1.2fr;
    min-width: 680px;
  }

  /* Mega Menu - Blog variant */
  .mega-menu--blog {
    grid-template-columns: 1fr 1fr 1.2fr;
    min-width: 620px;
  }

  .mega-menu__category--cta {
    background: linear-gradient(135deg, rgba(196, 30, 58, 0.05) 0%, rgba(196, 30, 58, 0.1) 100%);
    border-radius: var(--border-radius);
    padding: var(--spacing-md);
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .mega-menu__desc {
    font-size: var(--font-size-xs);
    color: var(--color-text-light);
    line-height: 1.5;
  }

  .mega-menu__whatsapp {
    font-size: var(--font-size-xs);
    color: var(--color-text-light);
    margin-top: auto;
    transition: color var(--transition-fast);
  }

  .mega-menu__whatsapp:hover {
    color: #25D366;
  }

  /* Hamburger */
  .hamburger {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 44px;
    height: 44px;
    gap: 5px;
    z-index: 1100;
  }

  .hamburger__line {
    width: 24px;
    height: 2px;
