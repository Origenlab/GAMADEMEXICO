---
import { withImageCdn } from '../lib/images';

interface Props {
  title: string;
  description: string;
  brand?: string;
  image?: string;
  productSlug: string;
  flow?: string;
  material?: string;
  certifications?: string[];
}

const {
  title,
  description,
  brand = '',
  image = '',
  productSlug,
  flow = '',
  material = '',
  certifications = [],
} = Astro.props;
const imageUrl = withImageCdn(image);

function getProductAnchorText(rawTitle: string): string {
  const cleanTitle = rawTitle.split(' - ')[0].trim();
  return cleanTitle.replace(/\s+(Elkhart Brass|Akron Brass|Task Force Tips|ARMECO)\b.*$/i, '').trim();
}

const anchorText = getProductAnchorText(title);
---

<article class="subcategory-product-card">
  <div
    class="subcategory-product-card__image"
    style={imageUrl ? `background-image: url(${imageUrl});` : undefined}
    role="img"
    aria-label={title}
  ></div>

  <div class="subcategory-product-card__body">
    {brand && <span class="subcategory-product-card__brand">{brand}</span>}
    <h3 class="subcategory-product-card__title">{title}</h3>
    <p class="subcategory-product-card__description">{description}</p>

    <ul class="subcategory-product-card__specs">
      {flow && (
        <li class="subcategory-product-card__spec">
          <strong>Caudal:</strong> {flow}
        </li>
      )}
      {material && (
        <li class="subcategory-product-card__spec">
          <strong>Material:</strong> {material}
        </li>
      )}
      {certifications.length > 0 && (
        <li class="subcategory-product-card__spec">
          <strong>Certificaciones:</strong> {certifications.join(', ')}
        </li>
      )}
    </ul>

    <div class="subcategory-product-card__cta">
      <a href={`/productos/${productSlug}`} class="btn btn--primary btn--sm">{anchorText}</a>
    </div>
  </div>
</article>

<style>
  .subcategory-product-card {
    background: var(--color-white);
    border: 1px solid var(--color-border);
    border-radius: 12px;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    height: 100%;
    box-shadow: 0 6px 18px rgba(0, 0, 0, 0.06);
  }

  .subcategory-product-card__image {
    min-height: 200px;
    background: var(--color-accent);
    background-size: cover;
    background-position: center;
    border-bottom: 1px solid var(--color-border);
  }

  .subcategory-product-card__body {
    padding: 1rem;
    display: flex;
    flex-direction: column;
    gap: 0.625rem;
    height: 100%;
  }

  .subcategory-product-card__brand {
    display: inline-flex;
    width: fit-content;
    background: rgba(196, 30, 58, 0.1);
    color: var(--color-primary);
    border: 1px solid rgba(196, 30, 58, 0.2);
    padding: 0.2rem 0.55rem;
    border-radius: 999px;
    font-size: 0.6875rem;
    font-weight: 700;
    letter-spacing: 0.04em;
    text-transform: uppercase;
  }

  .subcategory-product-card__title {
    margin: 0;
    font-size: 1.05rem;
    line-height: 1.35;
    color: var(--color-secondary);
  }

  .subcategory-product-card__description {
    margin: 0;
    font-size: 0.92rem;
    color: var(--color-text-light);
    line-height: 1.5;
  }

  .subcategory-product-card__specs {
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: 0.35rem;
  }

  .subcategory-product-card__spec {
    margin: 0;
    font-size: 0.87rem;
    color: var(--color-text);
    line-height: 1.4;
  }

  .subcategory-product-card__spec strong {
    color: var(--color-secondary);
  }

  .subcategory-product-card__cta {
    margin-top: auto;
    padding-top: 0.35rem;
  }

  .subcategory-product-card__cta .btn {
    width: 100%;
    justify-content: center;
  }
</style>
