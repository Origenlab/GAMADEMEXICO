---
// CtaCatalogo component - Llamada a la acción para visitar el catálogo
interface Props {
  titulo?: string;
  subtitulo?: string;
  textoBoton?: string;
  enlace?: string;
}

const {
  titulo = "Explora nuestro catálogo completo de equipos contra incendios",
  subtitulo = "Monitores · Boquillas · Mangueras · Válvulas · Conexiones · Gabinetes",
  textoBoton = "Ver Catálogo",
  enlace = "/equipos"
} = Astro.props;
---

<section class="cta-catalogo">
  <div class="container">
    <div class="cta-catalogo__content">
      <div class="cta-catalogo__text">
        <p class="cta-catalogo__titulo">{titulo}</p>
        <p class="cta-catalogo__subtitulo">{subtitulo}</p>
      </div>
      <a href={enlace} class="btn btn--white cta-catalogo__btn">
        {textoBoton}
        <svg class="cta-catalogo__icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M5 12h14M12 5l7 7-7 7"/>
        </svg>
      </a>
    </div>
  </div>
</section>

<style>
  .cta-catalogo {
    background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-primary-dark) 100%);
    padding: var(--spacing-md) 0;
    position: relative;
    overflow: hidden;
  }

  .cta-catalogo::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23ffffff' fill-opacity='0.05'%3E%3Cpath d='M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
    pointer-events: none;
  }

  .cta-catalogo__content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--spacing-md);
    text-align: center;
    position: relative;
    z-index: 1;
  }

  .cta-catalogo__text {
    flex: 1;
  }

  .cta-catalogo__titulo {
    font-size: var(--font-size-base);
    font-weight: 700;
    color: var(--color-white);
    margin-bottom: 0.25rem;
  }

  .cta-catalogo__subtitulo {
    font-size: var(--font-size-sm);
    color: rgba(255, 255, 255, 0.85);
    font-weight: 400;
  }

  .cta-catalogo__btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    white-space: nowrap;
    flex-shrink: 0;
    background-color: var(--color-white);
    color: var(--color-primary);
    border: 2px solid var(--color-white);
    padding: 0.625rem 1.5rem;
    font-weight: 600;
    border-radius: var(--border-radius);
    transition: all var(--transition-fast);
  }

  .cta-catalogo__btn:hover {
    background-color: transparent;
    color: var(--color-white);
  }

  .cta-catalogo__icon {
    transition: transform var(--transition-fast);
  }

  .cta-catalogo__btn:hover .cta-catalogo__icon {
    transform: translateX(4px);
  }

  /* Tablet */
  @media (min-width: 768px) {
    .cta-catalogo__content {
      flex-direction: row;
      justify-content: space-between;
      text-align: left;
    }

    .cta-catalogo__titulo {
      font-size: var(--font-size-lg);
    }
  }

  /* Desktop */
  @media (min-width: 1024px) {
    .cta-catalogo {
      padding: var(--spacing-sm) 0;
    }

    .cta-catalogo__titulo {
      font-size: var(--font-size-base);
      margin-bottom: 0;
    }

    .cta-catalogo__subtitulo {
      font-size: var(--font-size-xs);
    }

    .cta-catalogo__text {
      display: flex;
      align-items: center;
      gap: var(--spacing-md);
    }
  }
</style>
