---
// =============================================================================
// BlogTableOfContents - Tabla de contenidos sticky
// =============================================================================

interface TOCItem {
  id: string;
  text: string;
  level: number;
}

interface Props {
  headings: TOCItem[];
  titulo?: string;
}

const { headings, titulo = 'En este artÃ­culo' } = Astro.props;

// Filtrar solo h2 y h3
const filteredHeadings = headings.filter((h) => h.level === 2 || h.level === 3);
---

{filteredHeadings.length > 0 && (
  <nav class="blog-toc" aria-label="Tabla de contenidos">
    <h4 class="blog-toc__title">{titulo}</h4>
    <ul class="blog-toc__list">
      {filteredHeadings.map((heading) => (
        <li class={`blog-toc__item blog-toc__item--level-${heading.level}`}>
          <a href={`#${heading.id}`} class="blog-toc__link">
            {heading.text}
          </a>
        </li>
      ))}
    </ul>
  </nav>
)}

<style>
  .blog-toc {
    padding: var(--spacing-md);
    background: var(--color-white);
    border: 1px solid var(--color-border);
    border-radius: var(--border-radius);
  }

  .blog-toc__title {
    margin: 0 0 var(--spacing-sm) 0;
    font-size: var(--font-size-sm);
    font-weight: 600;
    color: var(--color-secondary);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .blog-toc__list {
    margin: 0;
    padding: 0;
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .blog-toc__item {
    margin: 0;
    padding: 0;
  }

  .blog-toc__item--level-3 {
    padding-left: 1rem;
  }

  .blog-toc__link {
    display: block;
    padding: 0.375rem 0;
    font-size: var(--font-size-sm);
    color: var(--color-text-light);
    text-decoration: none;
    line-height: 1.4;
    border-left: 2px solid transparent;
    padding-left: 0.75rem;
    margin-left: -0.75rem;
    transition: all var(--transition-fast);
  }

  .blog-toc__link:hover {
    color: var(--color-primary);
    border-left-color: var(--color-primary);
  }

  .blog-toc__item--level-3 .blog-toc__link {
    font-size: var(--font-size-xs);
  }
</style>
