---
// =============================================================================
// BlogCTA - Call to action contextual para artículos
// =============================================================================

import { WHATSAPP_NUMBER } from '../../lib/config';

interface Props {
  titulo?: string;
  texto?: string;
  ctaTexto?: string;
  ctaLink?: string;
  variant?: 'inline' | 'fullwidth' | 'sidebar';
  showWhatsApp?: boolean;
}

const {
  titulo = '¿Necesitas Equipos Contra Incendios?',
  texto = 'Nuestros ingenieros especializados te ayudan a elegir el equipo correcto para tu empresa.',
  ctaTexto = 'Solicitar Cotización',
  ctaLink = '#cotizar',
  variant = 'fullwidth',
  showWhatsApp = true,
} = Astro.props;

const whatsappUrl = `https://wa.me/${WHATSAPP_NUMBER}?text=${encodeURIComponent('Hola, me interesa cotizar equipos contra incendios.')}`;
---

<div class={`blog-cta blog-cta--${variant}`}>
  <div class="blog-cta__content">
    <h3 class="blog-cta__title">{titulo}</h3>
    <p class="blog-cta__text">{texto}</p>
  </div>
  <div class="blog-cta__actions">
    <a href={ctaLink} class="btn btn--primary">{ctaTexto}</a>
    {showWhatsApp && (
      <a href={whatsappUrl} class="btn btn--outline" target="_blank" rel="noopener">
        <svg
          width="20"
          height="20"
          viewBox="0 0 24 24"
          fill="currentColor"
          aria-hidden="true"
        >
          <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z" />
        </svg>
        WhatsApp
      </a>
    )}
  </div>
</div>

<style>
  .blog-cta {
    background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-primary-dark) 100%);
    border-radius: var(--border-radius);
    padding: var(--spacing-xl);
    color: var(--color-white);
  }

  .blog-cta--inline {
    margin: var(--spacing-xl) 0;
  }

  .blog-cta--fullwidth {
    margin: var(--spacing-2xl) 0;
  }

  .blog-cta--sidebar {
    padding: var(--spacing-lg);
  }

  .blog-cta__content {
    margin-bottom: var(--spacing-lg);
  }

  .blog-cta__title {
    margin: 0 0 var(--spacing-xs) 0;
    font-size: var(--font-size-xl);
    font-weight: 700;
  }

  .blog-cta--sidebar .blog-cta__title {
    font-size: var(--font-size-lg);
  }

  .blog-cta__text {
    margin: 0;
    font-size: var(--font-size-base);
    opacity: 0.9;
    line-height: 1.6;
  }

  .blog-cta--sidebar .blog-cta__text {
    font-size: var(--font-size-sm);
  }

  .blog-cta__actions {
    display: flex;
    flex-wrap: wrap;
    gap: var(--spacing-sm);
  }

  .blog-cta__actions .btn--primary {
    background: var(--color-white);
    color: var(--color-primary);
  }

  .blog-cta__actions .btn--primary:hover {
    background: var(--color-accent);
  }

  .blog-cta__actions .btn--outline {
    border-color: rgba(255, 255, 255, 0.5);
    color: var(--color-white);
  }

  .blog-cta__actions .btn--outline:hover {
    background: rgba(255, 255, 255, 0.1);
    border-color: var(--color-white);
  }

  .blog-cta__actions .btn--outline svg {
    flex-shrink: 0;
  }

  @media (min-width: 768px) {
    .blog-cta--fullwidth {
      display: flex;
      align-items: center;
      justify-content: space-between;
      gap: var(--spacing-xl);
    }

    .blog-cta--fullwidth .blog-cta__content {
      margin-bottom: 0;
      flex: 1;
    }

    .blog-cta--fullwidth .blog-cta__actions {
      flex-shrink: 0;
    }
  }
</style>
