---
interface Props {
  phoneNumber?: string;
  defaultMessage?: string;
  position?: 'bottom-right' | 'bottom-left';
  showTooltip?: boolean;
  tooltipText?: string;
}

const {
  phoneNumber = '5215565298240',
  defaultMessage = 'Hola, me interesa obtener informacion sobre equipos contra incendios.',
  position = 'bottom-right',
  showTooltip = true,
  tooltipText = 'Asesoria por WhatsApp',
} = Astro.props;

const whatsappUrl = `https://wa.me/${phoneNumber}?text=${encodeURIComponent(defaultMessage)}`;
---

<div class={`wa-bubble wa-bubble--${position}`}>
  {showTooltip && <span class="wa-bubble__tooltip">{tooltipText}</span>}
  <a
    class="wa-bubble__button"
    href={whatsappUrl}
    target="_blank"
    rel="noopener noreferrer"
    aria-label="Contactar por WhatsApp"
  >
    <svg width="26" height="26" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
      <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884" />
    </svg>
  </a>
</div>

<style>
  .wa-bubble {
    position: fixed;
    bottom: 20px;
    z-index: 9999;
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    gap: 0.5rem;
  }

  .wa-bubble--bottom-right {
    right: 20px;
  }

  .wa-bubble--bottom-left {
    left: 20px;
    align-items: flex-start;
  }

  .wa-bubble__button {
    width: 60px;
    height: 60px;
    border-radius: 50%;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    color: #fff;
    background: linear-gradient(135deg, #25d366 0%, #128c7e 100%);
    box-shadow: 0 8px 20px rgba(18, 140, 126, 0.35);
    transition: transform 150ms ease, box-shadow 150ms ease;
    animation: wa-pulse 2.2s ease-out infinite;
  }

  .wa-bubble__button:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 24px rgba(18, 140, 126, 0.45);
  }

  .wa-bubble__button:focus-visible {
    outline: 3px solid #25d366;
    outline-offset: 3px;
  }

  .wa-bubble__tooltip {
    font-size: 0.75rem;
    font-weight: 600;
    background: #1a1a2e;
    color: #fff;
    border-radius: 999px;
    padding: 0.4rem 0.7rem;
    box-shadow: 0 6px 16px rgba(0, 0, 0, 0.2);
    white-space: nowrap;
  }

  @keyframes wa-pulse {
    0% {
      box-shadow: 0 8px 20px rgba(18, 140, 126, 0.35), 0 0 0 0 rgba(37, 211, 102, 0.35);
    }
    70% {
      box-shadow: 0 8px 20px rgba(18, 140, 126, 0.35), 0 0 0 14px rgba(37, 211, 102, 0);
    }
    100% {
      box-shadow: 0 8px 20px rgba(18, 140, 126, 0.35), 0 0 0 0 rgba(37, 211, 102, 0);
    }
  }

  @media (max-width: 640px) {
    .wa-bubble {
      bottom: 14px;
    }

    .wa-bubble--bottom-right {
      right: 14px;
    }

    .wa-bubble--bottom-left {
      left: 14px;
    }

    .wa-bubble__button {
      width: 56px;
      height: 56px;
    }

    .wa-bubble__tooltip {
      display: none;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .wa-bubble__button {
      animation: none;
    }
  }
</style>
